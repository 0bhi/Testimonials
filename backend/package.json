    "@types/node": "^22.10.10",
    "drizzle-kit": "^0.20.9",
    "tsx": "^4.7.1",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.29.3",
