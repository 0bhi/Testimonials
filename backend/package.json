  "description": "Testimonials backend using Express.js, Drizzle ORM, and NeonDB",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "validate-env": "tsx scripts/validate-env.ts",
